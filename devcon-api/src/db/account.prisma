datasource db {
  provider = "postgres"
  url      = env("DB_CONNECTION_STRING")
}

generator client {
  provider = "prisma-client-js"
  output   = "./clients/account"
}

model VerificationToken {
  id String @default(cuid()) @id
  identifier String
  nonce Int
  issued DateTime @default(now())
  expires DateTime
}

model Account {
  id String @default(cuid()) @id
  username String?
  email String?
  activeAddress String?
  addresses String[]
  disabled Boolean @default(false)

  role String?
  yearsOfExperience Int?
  tracks String[]
  tags String[]

  favorite_speakers String[]
  interested_sessions String[]
  attending_sessions String[]
  publicSchedule Boolean @default(false)
  notifications Boolean @default(false)
  appState_bogota String?

  createdAt DateTime @default(now())
  updatedAt DateTime?
}

model DiscountClaims {
  id String @default(cuid()) @id
  identifier String
  voucher String
  issued DateTime @default(now())
}

model rate_limit {
  key    String  @id @db.VarChar(255)
  points Int     @default(0)
  expire BigInt?
}

model PushSubscription {
  id        String   @id @default(uuid())
  endpoint  String   @unique
  auth      String
  p256dh    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
