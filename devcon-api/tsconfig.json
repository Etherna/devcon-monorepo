{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "noEmitOnError": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./../lib/*"],
      "@/*": ["./src/*"]
    },
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "./src/**/*.test.ts",
    "./src/**/*.spec.ts"
  ]
}
